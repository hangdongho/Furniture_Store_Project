@model List<BTL_CHNT.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>*@
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <td>Mã sản phẩm</td>
                <td>Tên sản phẩm</td>
                <td>Ảnh</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.sanpham.masanpham</td>
                    <td>@item.sanpham.tensanpham</td>
                    <td><img src="~/Content/img/bg-img/@item.sanpham.hinhanh" width=" 100" /></td>
                    <td><input type="text" class="quantity" data-id="@item.sanpham.masanpham" value="@item.soluong" /></td>
                    <td>@item.sanpham.gia.ToString("N0")</td>
                    <td>@((item.sanpham.gia * item.soluong).ToString("N0"))</td>
                    <td><a href="#" data-id="@item.sanpham.masanpham" class="btn-delete">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
    <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
    <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
    <button id="btnDeleteAll" class="btn">Xóa giỏ hàng</button>
    <button id="btnPayment" class="btn">Đặt hàng</button>
}
else
{
    <span class="alert alert-danger">Không có sản phẩm nào trong giỏ hàng</span>
}
<script src="~/Scripts/js/jquery/jquery-2.2.4.min.js"></script>
<script src="~/Scripts/js/controller/cartController.js"></script>

